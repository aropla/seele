{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": [
      "vitest/globals",
      "../@repo/global.d.ts"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@logger": ["../fairy/src/logger-fairy"]
    }
  },
  "include": ["src", "tests"],
  "ts-node": {
    "esm": true
  }
}
